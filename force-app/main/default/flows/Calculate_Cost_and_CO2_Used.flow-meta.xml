<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>65.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <environments>Default</environments>
    <formulas>
        <name>calculatethestoredco2</name>
        <dataType>Number</dataType>
        <expression>{!$Record.Quantity__c}*{!$Record.Material__r.Carbon_per_Unit__c}</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>CostStored</name>
        <dataType>Currency</dataType>
        <expression>{!$Record.Quantity__c}*{!$Record.Material__r.Cost_per_Unit__c}</expression>
        <scale>2</scale>
    </formulas>
    <interviewLabel>Calculate Cost and CO2 Used {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Calculate Cost and CO2 Used</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_CO2_Used_and_Cost</name>
        <label>Update CO2 Used and Cost</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <inputAssignments>
            <field>CO2_Used__c</field>
            <value>
                <elementReference>calculatethestoredco2</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Cost__c</field>
            <value>
                <elementReference>CostStored</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_CO2_Used_and_Cost</targetReference>
        </connector>
        <object>Usage__c</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
